<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimples.biz.system.mapper.DeptMapper">
	<resultMap id="BaseResultMap" type="com.dimples.biz.system.po.Dept">
		<!--@mbg.generated-->
		<!--@Table db_dimples_shiro.tb_dept-->
		<id column="dept_id" jdbcType="BIGINT" property="deptId" />
		<result column="dept_name" jdbcType="VARCHAR" property="deptName" />
		<result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
		<result column="modify_date" jdbcType="TIMESTAMP" property="modifyDate" />
	</resultMap>
	<sql id="Base_Column_List">
		<!--@mbg.generated-->
		dept_id, dept_name, create_date, modify_date
	</sql>
	<select id="findByUserId" resultMap="BaseResultMap">
		select td.dept_id, td.dept_name, td.create_date, td.modify_date
		from db_dimples_shiro.tb_dept td
			     join db_dimples_shiro.tb_user_dept tud on td.dept_id = tud.dept_id
		where tud.user_id = #{userId,jdbcType=BIGINT}
	</select>
</mapper>















